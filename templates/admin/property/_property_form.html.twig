{{ form_start(form) }}
<div class="row">
    <div class="col">{{ form_row(form.name) }}</div>
    <div class="col">{{ form_row(form.surface) }}</div>
</div>
<div class="row">
    <div class="col">{{ form_row(form.rooms) }}</div>
    <div class="col">{{ form_row(form.bedrooms) }}</div>
</div>
<div class="row">
    <div class="col">{{ form_row(form.floor) }}</div>
    <div class="col">{{ form_row(form.price) }}</div>
</div>
<div class="row">
    <div class="col">{{ form_row(form.city) }}</div>
    <div class="col">{{ form_row(form.address) }}</div>
    <div class="col">{{ form_row(form.postalCode) }}</div>
</div>
<div class="row">
    <div class="col">{{ form_row(form.heat) }}</div>
    <div class="col">{{ form_row(form.sold) }}</div>
    <div class="col">{{ form_row(form.imageFile) }}</div>
</div>
<div class="row">
    <div class="col">{{ form_row(form.description) }}</div>
</div>
<div class="row">
    <div class="col">{{ form_row(form.tags) }}</div>
    <div class="col">{{ form_row(form.type) }}</div>
    <div class="col">{{ form_row(form.isPublished) }}</div>
</div>
<div class="row">
    <div class="col">
        {{ form_row(form.category) }}
    </div>
</div>
<div class="form-group">
    <button class="btn btn-success">
        <i class="fas fa-paper-plane"></i>
        Sauvegarder
    </button>
</div>
