{% extends 'admin.html.twig' %}

{% block title 'Edition de ' ~ property.name %}


{% block body %}

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        {{ include ('admin/property/_property_form.html.twig', {form: form, button: "Editer"}) }}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        {{ render(controller('App\\Controller\\ImageController::form')) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('form') }}
    <link rel="stylesheet" href="{{ asset('css/dropzone.css') }}">
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('form') }}
    <script src="{{ asset('js/dropzone.js') }}"></script>
    {{ include('admin/property/_dropzone_script.html.twig') }}
{% endblock %}



