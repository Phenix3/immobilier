{% extends 'admin.html.twig' %}

{% block title %}Type index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">Type index</h1>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Slug</th>
                                    <th>Description</th>
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for type in types %}
                                    <tr>
                                        <td>{{ type.name }}</td>
                                        <td>{{ type.slug }}</td>
                                        <td>{{ type.description }}</td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="{{ path('admin_type_edit', {'id': type.id}) }}" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="{{ path('admin_type_show', {'id': type.id}) }}" data-method="DELETE" data-csrf-token="{{ csrf_token('delete'~type.id) }}" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary btn-sm" href="{{ path('admin_type_new') }}">Create new</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
