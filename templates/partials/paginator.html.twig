<nav aria-label="Page navigation">
    <ul class="pagination justify-content-end">
        <li class="page-item {{ not paginator.hasPreviousPage ? 'disabled' : '' }}">
            {% if paginator.hasPreviousPage %}
                <a class="page-link" href="{{ path(app.request.get('_route')) ~ '?page='~paginator.previousPage }}">Précédente</a>
            {% else %}
                <a class="page-link" href="{{ path(app.request.get('_route')) ~ '?page=' }}">Précédente</a>
            {% endif %}
        </li>
        {% for page in 1..paginator.nbPages %}
            <li class="page-item">
                <a href="{{ path(app.request.get('_route')) ~ '?page='~page }}" class="page-link">{{ page }}</a>
            </li>
        {% endfor %}
        <li class="page-item {{ not paginator.hasNextPage ? 'disabled' : '' }}">
            {% if paginator.hasNextPage %}
            <a class="page-link" href="{{ path(app.request.get('_route')) ~ '?page='~paginator.nextPage }}">Suivante</a>
            {% else %}
            <a class="page-link" href="{{ path(app.request.get('_route')) ~ '?page=' }}">Suivante</a>
            {% endif %}
        </li>
    </ul>
</nav>