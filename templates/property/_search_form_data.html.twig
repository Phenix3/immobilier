{{ form_start(form, {attr: {class: 'js-filter-form'}}) }}
    <div class="row">
        {{ form_row(form.q) }}
    </div>
    <h4>Categories</h4>
    <div class="row">
        {{ form_row(form.categories) }}
    </div>
    <h4>Prix</h4>
    <div class="row">
        <div class="col">{{ form_row(form.minPrice) }}</div>
        <div class="col">{{ form_row(form.maxPrice) }}</div>
    </div>
    <div class="price-slider" data-min="{{ min }}" data-max="{{ max }}"></div>
    <div class="row mt-3">
        <button type="submit" class="btn south-btn btn-block">
            <i class="fa fa-search"></i> {{ 'forms.property_search.search'|trans }}
        </button>
    </div>
{{ form_end(form) }}