{% extends 'base.html.twig' %}

{% block title %} Purshase | {{ parent() }} {% endblock %}

{% block body %}

    <section class="breadcumb-area bg-img" style="background-image: url({{ asset('img/bg-img/hero1.jpg') }});">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="breadcumb-content">
                        <h3 class="breadcumb-title">{{ 'menu.purshase' | trans }}</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section-padding-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-heading">
                        <h1>{{ 'menu.purshase' | trans }}</h1>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="contact-form">
                        {{ form_start(propertyForm) }}
                        <div class="row">
                            <div class="col-12 col-md-6">{{ form_row(propertyForm.name) }}</div>
                            <div class="col-12 col-md-6">{{ form_row(propertyForm.price) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6">{{ form_row(propertyForm.address) }}</div>
                            <div class="col-12 col-md-6">{{ form_row(propertyForm.city) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6">{{ form_row(propertyForm.postalCode) }}</div>
                            <div class="col-12 col-md-6">{{ form_row(propertyForm.floor) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6">{{ form_row(propertyForm.rooms) }}</div>
                            <div class="col-12 col-md-6">{{ form_row(propertyForm.bedrooms) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6">{{ form_row(propertyForm.category) }}</div>
                            <div class="col-12 col-md-6">{{ form_row(propertyForm.type) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6">{{ form_row(propertyForm.heat) }}</div>
                            <div class="col-12 col-md-6">{{ form_row(propertyForm.tags) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6">{{ form_row(propertyForm.surface) }}</div>
                            <div class="col-12 col-md-6">{{ form_row(propertyForm.imageFile) }}</div>
                        </div>
                        <div class="row">
                            <div class="col-12">{{ form_row(propertyForm.description) }}</div>
                        </div>
                        {{ form_rest(propertyForm) }}
                        <div class="form-group">
                            <button type="submit" class="btn south-btn">
                                <i class="fas fa-paper-plane"></i>
                                {{ 'buttons.send' | trans }}
                            </button>
                        </div>
                        {{ form_end(propertyForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('form') }}
{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags('form') }}
{% endblock %}




